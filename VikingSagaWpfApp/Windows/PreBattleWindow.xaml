<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:VikingSagaWpfApp="clr-namespace:VikingSagaWpfApp" x:Class="VikingSagaWpfApp.Windows.PreBattleWindow"
        Title="PreBattleWindow" Height="300" Width="472" BorderThickness="2" BorderBrush="DarkGray" AllowsTransparency="True" >
    <Window.Background>
        <ImageBrush ImageSource="/VikingSagaWpfApp;component/Resources/backgrounds/wood-dark.jpg" Opacity="0.65"/>
    </Window.Background>
    <Grid>
        <VikingSagaWpfApp:HeroCardControl x:Name="EnemyHeroCardControl" HorizontalAlignment="Left" Margin="27,24,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="tbPreCombatText" Foreground="White" HorizontalAlignment="Left" Margin="250,24,0,0" TextWrapping="Wrap" Text="[encounter text]" VerticalAlignment="Top"/>
        <Button Name="btnAttack" Content="Attack" HorizontalAlignment="Left" Margin="228,205,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.027,2.129" Click="btnAttack_Click"/>
        <Button x:Name="btnFlee" Content="Flee" HorizontalAlignment="Left" Margin="317,205,0,0" VerticalAlignment="Top" Width="75" Click="btnFlee_Click"/>
    </Grid>
</Window>
