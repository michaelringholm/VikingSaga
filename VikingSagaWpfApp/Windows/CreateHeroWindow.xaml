<Window x:Class="VikingSagaWpfApp.Windows.CreateHeroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateHeroWindow" Height="300" Width="300">
    <Grid>
        <Button Name="btnCreateNewHero" Content="Create" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top" Width="75" Click="btnCreateNewHero_Click"/>
        <TextBox Name="HeroName" HorizontalAlignment="Left" Height="23" Margin="108,110,0,0" TextWrapping="Wrap" Text="Hero name" VerticalAlignment="Top" Width="120"/>
        <RadioButton Content="Warrior"  CommandParameter="Warrior" GroupName="HeroClass" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton Content="Mage" CommandParameter="Mage" GroupName="HeroClass" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Priest" CommandParameter="Priest" GroupName="HeroClass" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top"/>
        <Label Content="Hero name:" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
