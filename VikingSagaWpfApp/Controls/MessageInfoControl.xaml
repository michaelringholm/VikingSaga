<UserControl x:Class="VikingSagaWpfApp.Controls.MessageInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Border x:Name="borderInfo" IsHitTestVisible="False" Height="100" Panel.ZIndex="999999" Background="#33000000" BorderThickness="0,2" BorderBrush="Black" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
        <Grid>
            <TextBlock x:Name="tbInfo" TextAlignment="Center" Text="PUT ANY INFO HERE" VerticalAlignment="Center"  FontSize="36" FontWeight="Bold" Foreground="White" >
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
                <TextBlock.CacheMode>
                    <BitmapCache SnapsToDevicePixels="True"/>
                </TextBlock.CacheMode>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
