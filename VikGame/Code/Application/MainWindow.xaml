<Window x:Class="Vik.Code.Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Name="MainGrid" Background="#B0B1A3"/>
        <TextBlock Name="tbDebug" Visibility="Hidden" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Debug info" FontSize="12" FontFamily="Arial" Background="#80000000"/>
        <Border Name="fpsBorder" Visibility="Hidden" CornerRadius="3" Background="#80000000" VerticalAlignment="Bottom" Margin="0,0,0,30" HorizontalAlignment="Center" BorderThickness="1" BorderBrush="Black">
            <TextBlock Padding="5" Name="tbFps" Text="-- fps" FontSize="12" FontFamily="Arial" />
        </Border>
    </Grid>
</Window>
