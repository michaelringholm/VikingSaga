<UserControl x:Class="Vik.Code.Controls.Base.TabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Cursor="Hand">
    <Grid PreviewMouseLeftButtonDown="SelectTab">
        <Border Width="100" Height="32" CornerRadius="8 8 0 0" x:Name="OuterBorder">
            <Border.Background>
                <LinearGradientBrush x:Name="GradientBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop x:Name="GradientStop0" Color="#FF1F1D1D" Offset="0"/>
                    <GradientStop x:Name="GradientStop1" Color="#FF665C57" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock x:Name="TabTitle" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center">Tab</TextBlock>
        </Border>
    </Grid>
</UserControl>
