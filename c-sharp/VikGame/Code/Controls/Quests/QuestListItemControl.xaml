<UserControl x:Class="Vik.Code.Controls.Quests.QuestListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="DarkSlateGray" Cursor="Hand">
    <Border x:Name="OuterBorder" BorderThickness="2" CornerRadius="8" BorderBrush="{DynamicResource SelectedItemColorBrush}" Margin="0,4">
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="61*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="QuestTitle" Grid.Column="0" FontSize="14">Quest Title</TextBlock>
            <TextBlock x:Name="QuestStatus" Grid.Column="1" FontSize="14" Margin="12 0 0 0">(Ready to turn in)</TextBlock>
        </Grid>
    </Border>
</UserControl>
