<UserControl x:Class="Vik.Code.Controls.Utility.LargeOverlayTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="284" d:DesignWidth="872" IsHitTestVisible="False" >
    <Grid>
        <Border x:Name="borderInfo" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="80" Background="#33000000" BorderThickness="0,2" BorderBrush="Black" RenderTransformOrigin="0.5,0.5" >
            <Grid>
                <TextBlock x:Name="tbInfo" TextAlignment="Center" Text="This Will Contain Your Text" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="White">
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                    <TextBlock.CacheMode>
                        <BitmapCache SnapsToDevicePixels="True"/>
                    </TextBlock.CacheMode>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
