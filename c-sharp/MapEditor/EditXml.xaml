<Window x:Class="MapEditor.EditXml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit XML" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
        <Button Content="OK" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="Button_Click_1"/>
        </Grid>
        <TextBox x:Name="tbXml" TextWrapping="NoWrap" AcceptsReturn="True" Margin="10,10,10,10" Text="TextBox" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
